<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ui_listview_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/ui_listview_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/ui_listview_simple_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ui_listview_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/ui_listview_simple_button_text" />

    <Button
        android:id="@+id/ui_listview_sql_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/ui_listview_sql_button_text" />

    <Button
        android:id="@+id/ui_listview_sql_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ui_listview_sql_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/ui_listview_sql_Radio_button_text" />

</RelativeLayout>
