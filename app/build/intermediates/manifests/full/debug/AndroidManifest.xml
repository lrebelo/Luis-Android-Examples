        </activity>
        <activity
            android:name="lrebelo.examples.android.ui.listview.ListViewSQLRadio_UIex"
            android:label="@string/ui_list_layout" >
        </activity>
        <activity
            android:name="lrebelo.examples.android.ui.Menu_Toast_UIex"
            android:label="@string/ui_menu_example" >
        </activity>
        <activity
            android:name="lrebelo.examples.android.ui.Widgets_UIex"
            android:label="@string/ui_awidgets_example" >
