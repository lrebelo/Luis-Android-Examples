        </activity>
        <activity
            android:name="lrebelo.examples.android.ui.listview.ListViewSimple_UIex"
            android:label="@string/ui_list_layout" >
        </activity>
        <activity
            android:name="lrebelo.examples.android.ui.listview.ListViewSQL_UIex"
